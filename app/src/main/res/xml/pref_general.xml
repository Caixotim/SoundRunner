<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Personal Data">
        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="pref_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />
        <ListPreference
            android:key="pref_sex"
            android:title="gnm_Sex"
            android:dialogTitle="gnm_Sex"
            android:entries="@array/pref_sex"
            android:entryValues="@array/pref_sex" />
        <EditTextPreference
            android:inputType="number"
            android:key="pref_weight"
            android:title="gnm_Weight"/>
        <EditTextPreference
            android:inputType="numberDecimal"
            android:key="pref_height"
            android:title="gnm_Height"/>
    </PreferenceCategory>

</PreferenceScreen>
